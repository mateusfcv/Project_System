@model IEnumerable<Mateus.SistemaAcademico.Models.Conteudo>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListarConteudos</title>
</head>
<body>
    <p>
        @Html.ActionLink("Adicionar Conteudo", "AdicionarConteudo")
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.ActionLink("Editar", "EditarConteudo", new { id=item.Id }) |
                @Html.ActionLink("Detalhes", "VisualizarDetalhes", new { id=item.Id }) |
                @Html.ActionLink("Remover", "RemoverConteudo", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
    <p>
        @Html.ActionLink("Voltar", "Index")
    </p>
</body>
</html>
