@model IList<Mateus.SistemaAcademico.Models.Aluno>

@{

    ViewBag.Title = "Index";

}

<h2>Lista de Alunos</h2>
<div class="card-body">
    <p>
        <a href="/Alunos/AdicionarAluno">Matricular Aluno</a>
    </p>

    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

            <thead>

                <tr>

                    <th>Nome</th>
                    <th>Curso Matriculado</th>

                    <th></th>
                    <th></th>
                    <th></th>

                </tr>

            </thead>

            <tbody>

                @foreach (var aluno in ViewBag.Alunos)
                {
                    using (Html.BeginForm("ListarAluno", "Aluno", new { id = aluno.Id }))
                    {
                        <tr>
                            <td>
                                @aluno.Nome
                            </td>

                            <td>
                                @aluno.CursoId
                            </td>


                            <td>
                                <a href="/Alunos/RemoverAluno/@aluno.Id">Remover Aluno</a>
                            </td>

                            <td>
                                <a href="/Alunos/VisualizarDetalhes/@aluno.Id">Detalhes</a>
                            </td>

                            <td>
                                <a href="/Alunos/EditarAluno/@aluno.Id">Editar Aluno</a>
                            </td>

                        </tr>
                    }
                }
            </tbody>
        </table>
        <p>
            @Html.ActionLink("Voltar", "Index", "Home")
        </p>
    </div>
</div>
