<form action="/AdicionarCurso" method="post">

    @Html.AntiForgeryToken()

    <h2>Cadastro de cursos</h2>

    @Html.ValidationMessage("cursos.Nome")
    <label for="nome">Nome:</label>
    <input id="nome" name="cursos.Nome" class="form-control" />


    @Html.ValidationMessage("cursos.Duracao")
    <label for="duracao">Duração:</label>
    <input id="duracao" name="cursos.Duracao" class="form-control" />


    @Html.ValidationMessage("cursos.DataDeInicio")
    <label for="datadefim">Data De Inicio:</label>
    <input type="date" name="cursos.DataDeInicio" class="form-control" />


    @Html.ValidationMessage("cursos.DataDeFim")
    <label for="datadefim">Data De Fim:</label>
    <input type="date" name="cursos.DataDeFim" class="form-control" />


    @Html.ValidationMessage("cursos.Coordenador")
    <label for="coordenador">Coordenador:</label>
    <input id="coordenador" name="cursos.Coordenador" class="form-control" />


    <input type="submit" value="Cadastrar" />

</form>