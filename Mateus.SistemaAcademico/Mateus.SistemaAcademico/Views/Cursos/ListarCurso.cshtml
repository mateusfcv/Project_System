@model IEnumerable<Mateus.SistemaAcademico.Models.Curso>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListarCurso</title>
</head>
<body>
    <p>
        @Html.ActionLink("Adiconar Curso", "AdicionarCurso")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duracao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataDeInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataDeFim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoordenadorId)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.TipoCurso)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duracao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataDeInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataDeFim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CoordenadorId)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.TipoCurso)
        </td>
        <td>
            @Html.ActionLink("Editar", "EditarCurso", new { id = item.Id }) |
            @Html.ActionLink("Detalhes", "VisualizarDetalhes", new { id = item.Id }) |
            @Html.ActionLink("Excluir", "RemoverCurso", new { id = item.Id })
        </td>
    </tr>
        }

        @Html.ActionLink("Voltar", "Index")
    </table>
</body>
</html>
