@model IList<Mateus.SistemaAcademico.Models.Aluno>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Alunos do sistema</h2>

<div class="card-body">

    <div class="table-responsive">

        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Cpf</th>
                    <th>Registro do Aluno</th>
                    <th>Responsavel</th>
                    <th>Curso</th>

                    <th></th>
                    <th></th>

                    <td>
                        <a href="/Aluno/AdicionarAluno">Adicionar Aluno</a>
                    </td>
                </tr>
            </thead>

            <tbody>
                @foreach (var aluno in ViewBag.aluno)
                {
                    using (Html.BeginForm("ListarCurso", "Curso", new { id = aluno.Id }))
                    {
                        <tr>
                            <td>
                                @aluno.Nome
                            </td>

                            <td>
                                @aluno.Cpf
                            </td>

                            <td>
                                @aluno.RegistroDoAluno
                            </td>

                            <td>
                                @aluno.Responsaveis
                            </td>

                             <td>
                                @aluno.Responsaveis
                            </td>

                            <td>
                                @aluno.Curso
                            </td>

                            <td>
                                <a href="/Aluno/RemoverAluno/@aluno.Id">Remover Aluno</a>
                            </td>

                            <td>
                                <a href="/Aluno/ListarAlunos/@aluno.Id">Listar Alunos</a>
                            </td>

                            <td>
                                <a href="/Aluno/EditarAluno/@aluno.Id">Editar Aluno</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>