@model IList<Mateus.SistemaAcademico.Models.Conteudo>
@using Mateus.SistemaAcademico.Models
@using Mateus.SistemaAcademico.Models.Enums

@{

    ViewBag.Title = "Index";

}

<h2>Lista de Conteúdos</h2>
<div class="card-body">
    @if ((Session["usuarioLogado"] as Usuario).TipoPerfil == TipoPerfil.Professor)
    {
        <p>
            <a href="/Conteudos/AdicionarConteudo">Adicionar Conteúdo</a>
        </p>
    }

    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

            <thead>

                <tr>
                    <th>Nome</th>
                    <th>Disciplina</th>

                    <th></th>
                    <th></th>
                    <th></th>

                </tr>

            </thead>

            <tbody>

                @foreach (var conteudo in Model)
                {
                    using (Html.BeginForm("ListarConteudo", "Conteudos", new { id = conteudo.Id }))
                    {
                        <tr>
                            <td>
                                @conteudo.Nome
                            </td>

                            <td>
                                @conteudo.Disciplina.Nome
                            </td>

                            @if ((Session["usuarioLogado"] as Usuario).TipoPerfil == TipoPerfil.Professor)
                            {
                                <td>
                                    <a href="/Conteudos/RemoverConteudo/@conteudo.Id">Remover</a>
                                </td>

                                <td>
                                    <a href="/Conteudos/VisualizarDetalhes/@conteudo.Id">Detalhes</a>
                                </td>

                                <td>
                                    <a href="/Conteudos/EditarConteudo/@conteudo.Id">Editar</a>
                                </td>
                            }


                        </tr>
                    }
                }
            </tbody>
        </table>
        <p>
            @Html.ActionLink("Voltar", "Index", "Home")
        </p>
    </div>
</div>
