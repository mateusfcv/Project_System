@model IList<Mateus.SistemaAcademico.Models.Administrador>

@{

    ViewBag.Title = "Index";

}

<h2>Lista de Administradores</h2>
<div class="card-body">
    <p>
        <a href="/Adm/AdicionarAdministrador">Cadastrar Administrador</a>
    </p>

    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

            <thead>

                <tr>

                    <th>Nome</th>
                    <th>Email</th>

                    <th></th>
                    <th></th>
                    <th></th>

                </tr>

            </thead>

            <tbody>

                @foreach (var adm in ViewBag.Adm)
                {
                    using (Html.BeginForm("ListarAdministrador", "Adm", new { id = adm.Id }))
                    {
                        <tr>
                            <td>
                                @adm.Nome
                            </td>

                            <td>
                                @adm.Email
                            </td>


                            <td>
                                <a href="/Adm/RemoverAdministrador/@adm.Id">Remover Administrador</a>
                            </td>

                            <td>
                                <a href="/Adm/VisualizarDetalhes/@adm.Id">Detalhes</a>
                            </td>

                            <td>
                                <a href="/Adm/EditarAdministrador/@adm.Id">Editar Administrador</a>
                            </td>

                        </tr>
                    }
                }
            </tbody>
        </table>
        <p>
            @Html.ActionLink("Voltar", "Index", "Home")
        </p>
    </div>
</div>
