@model IList<Mateus.SistemaAcademico.Models.Disciplina>

@{

    ViewBag.Title = "Index";

}

<h2>Lista de Disciplinas</h2>
<div class="card-body">
    <p>
        <a href="/Disciplinas/AdicionarDisciplina">Cadastrar Disciplina</a>
    </p>
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

            <thead>

                <tr>

                    <th>Professor</th>
                    <th>Nome</th>
                    <th>Carga horária</th>

                    <th></th>
                    <th></th>
                    <th></th>
                </tr>

            </thead>

            <tbody>

                @foreach (var disciplinas in ViewBag.Disciplinas)
                {
                    using (Html.BeginForm("ListarDisciplina", "Disciplina", new { id = disciplinas.Id }))
                    {
                        <tr>
                            <td>
                                @disciplinas.ProfessorId
                            </td>

                            <td>
                                @disciplinas.Nome
                            </td>

                            <td>
                                @disciplinas.CargaHoraria
                            </td>


                            <td>
                                <a href="/Disciplinas/RemoverDisciplina/@disciplinas.Id">Remover Disciplina</a>
                            </td>

                            <td>
                                <a href="/Disciplinas/VisualizarDetalhes/@disciplinas.Id">Detalhes</a>
                            </td>

                            <td>
                                <a href="/Disciplinas/EditarDisciplina/@disciplinas.Id">Editar Disciplina</a>
                            </td>

                        </tr>
                    }
                }
            </tbody>
        </table>
        <p>
            @Html.ActionLink("Voltar", "Index", "Home") 
        </p>
    </div>
</div>
