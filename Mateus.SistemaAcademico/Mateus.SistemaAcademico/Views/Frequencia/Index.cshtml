@model IList<Mateus.SistemaAcademico.Models.Frequencia>

@{

    ViewBag.Title = "Index";

}

<h4>FREQUENCIA</h4>
<div class="card-body">
    <p>
        <a href="/Frequencia/AdicionarFrequencia">Adicionar Frequencia</a>
    </p>
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

            <thead>

                <tr>

                    <th>Data</th>
                    <th>Disciplina</th>
                    <th>Aluno</th>
                    <th>Tipo de frequencia</th>

                    <th></th>
                    <th></th>
                    <th></th>
                </tr>

            </thead>

            <tbody>

                @foreach (var frequencia in ViewBag.Frequencia)
                {
                    using (Html.BeginForm("ListarFrequencia", "Frequencia", new { id = frequencia.Id }))
                    {
                        <tr>
                            <td>
                                @frequencia.Data
                            </td>

                            <td>
                                @frequencia.DisciplinaId
                            </td>

                            <td>
                                @frequencia.AlunoId
                            </td>

                            <td>
                                @frequencia.TipoFrequencia
                            </td>


                            <td>
                                <a href="/Frequencia/RemoverFrequencia/@frequencia.Id">Remover Frequencia</a>
                            </td>

                            <td>
                                <a href="/Frequencia/VisualizarDetalhes/@frequencia.Id">Detalhes</a>
                            </td>

                            <td>
                                <a href="/Frequencia/EditarFrequencia/@frequencia.Id">Editar Frequencia</a>
                            </td>

                        </tr>
                    }
                }
            </tbody>
        </table>
        <p>
            @Html.ActionLink("Voltar", "Index", "Home")
        </p>
    </div>
</div>
