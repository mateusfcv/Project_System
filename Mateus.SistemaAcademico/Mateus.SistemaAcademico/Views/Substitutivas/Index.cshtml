@model IList<Mateus.SistemaAcademico.Models.Substitutivas>

@{

    ViewBag.Title = "Index";

}

<h2>Lista de substitutivas do sistema</h2>
<div class="card-body">
    <p>
        <a href="/Substitutivas/AdicionarSubstitutivas">Adicionar Substitutiva</a>
    </p>
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

            <thead>

                <tr>

                    <th>Aluno</th>
                    <th>Nota</th>
                    <th>Disciplina</th>
                    <th>Data</th>

                    <th></th>
                    <th></th>
                    <th></th>

                </tr>

            </thead>

            <tbody>

                @foreach (var substitutivas in Model)
                {
                    using (Html.BeginForm("ListarSubstitutivas", "Substitutivas", new { id = substitutivas.Id }))
                    {
                        <tr>
                            <td>
                                @substitutivas.Aluno.Nome
                            </td>

                            <td>
                                @substitutivas.Nota
                            </td>

                            <td>
                                @substitutivas.Disciplina.Nome
                            </td>

                            <td>
                                @substitutivas.Data.ToString("dd/MM/yyyy")
                            </td>



                            <td>
                                <a href="/Substitutivas/RemoverSubstitutivas/@substitutivas.Id">Remover</a>
                            </td>

                            <td>
                                <a href="/Substitutivas/VisualizarDetalhes/@substitutivas.Id">Detalhes</a>
                            </td>

                            <td>
                                <a href="/Substitutivas/EditarSubstitutivas/@substitutivas.Id">Editar</a>
                            </td>

                        </tr>
                    }
                }
            </tbody>
        </table>
        <p>
            @Html.ActionLink("Voltar", "Index", "Home")
        </p>
    </div>
</div>
