@model IList<Mateus.SistemaAcademico.Models.Secretaria>

@{

    ViewBag.Title = "Index";

}

<h2>Lista de Secretárias</h2>
<div class="card-body">
    <p>
        <a href="/Secretarias/AdicionarSecretaria">Adicionar Secretária</a>
    </p>

    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

            <thead>

                <tr>

                    <th>Nome</th>
                    <th>Email</th>
                    
                    <th></th>
                    <th></th>
                    <th></th>

                </tr>

            </thead>

            <tbody>

                @foreach (var secretaria in ViewBag.Secretarias)
                {
                    using (Html.BeginForm("ListarSecretaria", "Secretaria", new { id = secretaria.Id }))
                    {
                        <tr>
                            <td>
                                @secretaria.Nome
                            </td>

                            <td>
                                @secretaria.Email
                            </td>

                            <td>
                                <a href="/Secretarias/RemoverSecretaria/@secretaria.Id">Remover Secretária</a>
                            </td>

                            <td>
                                <a href="/Secretarias/VisualizarDetalhes/@secretaria.Id">Detalhes</a>
                            </td>

                            <td>
                                <a href="/Secretarias/EditarSecretaria/@secretaria.Id">Editar Secretária</a>
                            </td>

                        </tr>
                    }
                }
            </tbody>
        </table>
        <p>
            @Html.ActionLink("Voltar", "Index", "Home")
        </p>
    </div>
</div>
